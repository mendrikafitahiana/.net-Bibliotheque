@model Bibtheque.Models.Categorie

@{
    ViewData["Title"] = "Create";
}

<h2>Création d'un catégorie</h2>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row mb-3">
                <label asp-for="nom" class="col-sm-2 col-form-label" for="nom">Nom du catégorie</label>
                <div class="col-sm-10">
                    <input asp-for="nom" class="form-control" id="nom"/>
                    <span asp-validation-for="nom" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col text-center">
                    <input type="submit" value="Créer" class="btn btn-outline-primary d-inline-block" />
                </div>
            </div>
        </form>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-outline-secondary"> <- Revenir à la liste des catégories</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
