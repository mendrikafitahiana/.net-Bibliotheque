@model Bibtheque.Models.Region

@{
    ViewData["Title"] = "Edit";
}

<h1>Modifier une région</h1>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="row mb-3">
                <label asp-for="nom" class="col-sm-2 col-form-label" for="nom">Région</label>
                <div class="col-sm-10">
                    <input asp-for="nom" class="form-control" id="nom"/>
                    <span asp-validation-for="nom" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="nbJourLivraison" class="col-sm-2 col-form-label" for="nbjour">Nombre de jour de livraison</label>
                <div class="col-sm-10">
                    <input asp-for="nbJourLivraison" class="form-control" id="nbjour"/>
                    <span asp-validation-for="nbJourLivraison" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col text-center">
                    <input type="submit" value="Modifier" class="btn btn-outline-primary d-inline-block" />
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-secondary"> <- Revenir à la liste des catégories</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
