@model Utilisateur

@{
    ViewData["Title"] = "Connexion";
}

<div class="container" style="display: flex;justify-content: center;align-items: center;height: 100%;">
    <div class="card" style="width: 50rem;">
        <div class="card-body">
            <h2 class="card-title" style="text-align:center">Se connecter : Administration</h2>

            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <form asp-action="Login" method="post">
                <div class="row mb-3">
                    <label asp-for="username" class="col-sm-2 col-form-label" for="username">Nom d'utilisateur</label>
                    <div class="col-sm-10">
                        <input asp-for="username" class="form-control" id="username" />
                    </div>
                </div>
                <div class="row mb-3">
                    <label asp-for="password" class="col-sm-2 col-form-label" for="password">Mot de passe</label>
                    <div class="col-sm-10">
                        <input asp-for="password" type="password" class="form-control" id="password" />
                    </div>
                </div>
                <button type="submit" class="btn btn-success">Se connecter</button>
            </form>

        </div>
    </div>
</div>



